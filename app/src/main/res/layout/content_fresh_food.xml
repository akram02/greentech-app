<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.freshFood.FreshFoodActivity"
    tools:showIn="@layout/activity_fresh_food">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="230dp"
        android:layout_height="205dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/fresh_food" />

    <TextView
        app:layout_constraintTop_toBottomOf="@id/imageView2"
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location: Mohammadpur"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#F44336"
        tools:layout_editor_absoluteX="89dp"
        tools:layout_editor_absoluteY="248dp" />
    <com.google.android.material.card.MaterialCardView
        app:layout_constraintTop_toBottomOf="@id/textView"
        android:id="@+id/profile1"
        android:layout_margin="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:srcCompat="@tools:sample/avatars[1]" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Name: Laboni"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#03A9F4"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="134dp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Food: Biriani"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#673AB7"
                tools:layout_editor_absoluteX="137dp"
                tools:layout_editor_absoluteY="55dp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rating: 4.5"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#3F51B5"
                tools:layout_editor_absoluteX="141dp"
                tools:layout_editor_absoluteY="96dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        app:layout_constraintTop_toBottomOf="@id/profile1"
        android:layout_margin="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:srcCompat="@tools:sample/avatars[3]" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Name: Rehana"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#03A9F4"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="134dp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Food: Fried Rice"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#673AB7"
                tools:layout_editor_absoluteX="137dp"
                tools:layout_editor_absoluteY="55dp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rating: 3.9"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#3F51B5"
                tools:layout_editor_absoluteX="141dp"
                tools:layout_editor_absoluteY="96dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>